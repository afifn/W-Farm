<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kuycoding.wijayafarm">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WijayaFarm"
        tools:targetApi="31">
        <activity
            android:name=".ui.ProfilActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pemilik.PemilikMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_pemilik_menu" />
        <activity
            android:name=".ui.pemilik.activity.PemilikLaporanPanenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pemilik.activity.PemilikLaporanPengeluaranActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pemilik.activity.PemilikLaporanAyamActivity"
            android:exported="false" />
        <activity
            android:name=".ui.petugas.PetugasActivity"
            android:exported="false" />
        <activity
            android:name=".ui.start.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.start.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
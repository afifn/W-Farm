<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="@dimen/_16sdp"
            android:background="@drawable/bg_rounded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight=".6">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ayam_sehat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sehat"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/hitam"
                    android:fontFamily="@font/source_sans_pro_semibold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight=".4">
                <!--<ImageButton
                    android:id="@+id/btn_add_sehat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_red_circler"
                    android:backgroundTint="@null"/>-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinput_layouthidup"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_sehat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textColor="@color/hitam"
                        android:cursorVisible="false"
                        android:textAlignment="center"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <!--<ImageButton
                    android:id="@+id/btn_min_sehat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_red_circler"
                    android:backgroundTint="@null"/>-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:weightSum="1"
            android:padding="@dimen/_16sdp"
            android:background="@drawable/bg_rounded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight=".6">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ayam_sakit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sakit"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/hitam"
                    android:fontFamily="@font/source_sans_pro_semibold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight=".4">
                <ImageButton
                    android:id="@+id/btn_add_sakit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_red_circler"
                    android:backgroundTint="@null"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_sakit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:cursorVisible="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:textColor="@color/hitam"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/btn_min_sakit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_red_circler"
                    android:backgroundTint="@null"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:weightSum="1"
            android:padding="@dimen/_16sdp"
            android:background="@drawable/bg_rounded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight=".6">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ayam_sembuh"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sembuh"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/hitam"
                    android:fontFamily="@font/source_sans_pro_semibold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight=".4">
                <ImageButton
                    android:id="@+id/btn_add_sembuh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_red_circler"
                    android:backgroundTint="@null"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_sembuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:cursorVisible="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:textColor="@color/hitam"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/btn_min_sembuh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_red_circler"
                    android:backgroundTint="@null"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_simpan"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/simpan"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:backgroundTint="@null"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:textAllCaps="false"
            android:background="@drawable/button_red"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".ui.petugas.fragment.PetugasHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ScrollViewSize">

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/banner_top"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/welcom"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/txt_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                tools:text="Afif Nor Yusuf" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_logout"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@drawable/logout"
            android:backgroundTint="@color/white"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/yellow"
                        android:background="@drawable/ic_baseline_dashboard_24"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/hitam_pekat"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:text="@string/dashboard"/>
                </LinearLayout>
                <!--            Dashboard-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/periode"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:textColor="@color/hitam_pekat"
                        android:textSize="@dimen/_14ssp"/>
                    <TextView
                        android:id="@+id/txt_periode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" Agustus 2020"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_14ssp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ayam"
                        android:backgroundTint="@color/yellow"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/hitam_pekat"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:text="@string/ayam"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:padding="@dimen/_8sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:weightSum="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight=".4"
                            android:src="@drawable/ayam_hidup"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textSize="@dimen/_14ssp"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:textColor="@color/hitam_terang"
                            android:layout_gravity="center_vertical"
                            android:text="@string/hidup"/>
                        <TextView
                            android:id="@+id/txt_ayam_hidup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:textColor="@color/red"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textSize="@dimen/_14ssp"
                            tools:text="122"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight=".4"
                            android:src="@drawable/ayam_mati"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textSize="@dimen/_14ssp"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:textColor="@color/hitam_terang"
                            android:layout_gravity="center_vertical"
                            android:text="@string/mati"/>
                        <TextView
                            android:id="@+id/txt_ayam_mati"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:textColor="@color/red"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textSize="@dimen/_14ssp"
                            tools:text="122"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/icon_pengeluaran"
                        android:backgroundTint="@color/yellow"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/hitam_pekat"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:text="@string/pengeluaran"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:padding="@dimen/_8sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:weightSum="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/total_pengeluaran"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textColor="@color/hitam_terang"/>
                        <TextView
                            android:id="@+id/txt_total_pengeluaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:textAlignment="textEnd"
                            tools:text="1222"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textColor="@color/red"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/icon_pane"
                        android:backgroundTint="@color/yellow"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/hitam_pekat"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:text="@string/panen"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:padding="@dimen/_8sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:weightSum="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/total_panen"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textColor="@color/hitam_terang"/>
                        <TextView
                            android:id="@+id/txt_total_panen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:textAlignment="textEnd"
                            tools:text="1222"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/source_sans_pro_semibold"
                            android:textColor="@color/red"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>